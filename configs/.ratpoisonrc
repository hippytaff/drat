set border 0
escape C-X
bind c exec terminology
bind C exec terminology -S vh -e mc $SHELL 'tty-clock -c'
bind B exec firefox
bind t exec firefox --remote "openurl(`$RATPOISON -c getsel`,new-tab)" # `C-t' : open link in new tab
bind T exec tty-clock
bind m exec mc
bind i exec irssi

